# ===========================================
# Journey Through Time App - Environment Configuration
# ===========================================

# Blockchain Configuration
# -------------------------
# Your wallet's private key for deployment (NEVER commit the real .env file)
PRIVATE_KEY=your_wallet_private_key_here

# RPC endpoint for blockchain network
ETH_RPC_URL=https://testnet-rpc.monad.xyz  # Used by both Hardhat & Foundry

# Foundry keystore account label (see scripts/deploy_foundry.sh)
FOUNDRY_KEYSTORE=monad-deployer  # Name of the keystore file without extension

# API key for contract verification (optional)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Frontend Configuration
# ----------------------
# Deployed smart contract address (set after deployment)
REACT_APP_CONTRACT_ADDRESS=your_deployed_contract_address_here

# Network chain ID (10143 for Monad testnet)
REACT_APP_NETWORK_ID=10143

# Application environment
REACT_APP_ENVIRONMENT=development

# Security Configuration
# ----------------------
# Enable/disable debug logging (set to 'false' for production)
REACT_APP_DEBUG=true

# Enable gas reporting for testing
REPORT_GAS=true

# Development Configuration
# -------------------------
# Enable hot reloading
FAST_REFRESH=true

# Skip TypeScript type checking during development (not recommended)
TSC_COMPILE_ON_ERROR=false

# Production Configuration
# ------------------------
# Set to 'true' to generate source maps in production
GENERATE_SOURCEMAP=false

# Set to 'true' to enable service worker caching
REACT_APP_ENABLE_SW=false

# Security Headers (for production deployment)
# -------------------------------------------
# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'

# Example Deployment Values (Monad Testnet)
# -----------------------------------------
# PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# REACT_APP_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
# ETH_RPC_URL=https://rpc.testnet.monad.xyz
# REACT_APP_NETWORK_ID=10143
